<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

    <Frame name="MageHUDFrame" parent="UIParent" hidden="false" frameStrata="LOW">
        <Size>
            <AbsDimension x="50" y="350"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER" relativeTo="WorldFrame">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="$parentText" outline="NORMAL" font="Fonts\FRIZQT__.TTF" justifyH="CENTER">
                    <FontHeight>
                        <AbsValue val="30"/>
                    </FontHeight>
                    <Color r="1" g="1" b="0"/>
                    <Size>
                        <AbsDimension x="40" y="30"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
</Ui>

